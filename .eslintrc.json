{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
     "eslint:recommended",
     "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
  },
  "globals": {
    "it": false,
    "describe": false,
    "after": false,
    "before": false,
    "document": false,
    "nodeRequire": false
  },
  "rules": {
    "indent": [
      "error",
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "off",
    "no-var": "warn",
    "handle-callback-err": "warn",
    "key-spacing": "warn",
    "no-whitespace-before-property": "error",
    "keyword-spacing": [
      "warn"
    ],
    "space-before-function-paren": "warn",
    "comma-dangle": [
      "warn",
      "never"
    ],
    "comma-spacing": [
      "warn"
    ],
    "spaced-comment": "warn"
  }
}